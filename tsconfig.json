{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es2021"],
    "module": "NodeNext",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "template-examples"],
  "lib": ["esnext"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
